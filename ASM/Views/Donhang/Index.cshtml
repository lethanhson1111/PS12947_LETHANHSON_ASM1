@model IEnumerable<ASM.Models.Donhang>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead style="background: linear-gradient(to right, #e22940, #310202); color:white ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngaydat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trangthaiDonhang)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Ghichu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khachhang)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaydat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tongtien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangthaiDonhang)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Ghichu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khachhang.ConfirmPassword)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.DonhangID"class="btn btn-warning">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.DonhangID"class="btn btn-warning">Xem</a> |
                <a asp-action="Delete" asp-route-id="@item.DonhangID"class="btn btn-warning">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
